<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventChangeLoggingLevel</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(logging_level__c), NOT(ISNEW()))</errorConditionFormula>
    <errorDisplayField>logging_level__c</errorDisplayField>
    <errorMessage>Logging Level cannot be changed after record is created.</errorMessage>
</ValidationRule>
