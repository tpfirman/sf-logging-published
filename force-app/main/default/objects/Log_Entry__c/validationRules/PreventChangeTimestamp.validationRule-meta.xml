<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventChangeTimestamp</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(timestamp__c), NOT(ISNEW()))</errorConditionFormula>
    <errorDisplayField>timestamp__c</errorDisplayField>
    <errorMessage>Time stamp cannot be changed after record is created.</errorMessage>
</ValidationRule>
