<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventChangeSource</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(source__c), NOT(ISNEW()))</errorConditionFormula>
    <errorDisplayField>source__c</errorDisplayField>
    <errorMessage>source value cannot be changed after record is created.</errorMessage>
</ValidationRule>
